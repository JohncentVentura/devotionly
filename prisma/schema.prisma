generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Devotions{
  userId String
  id String @id @default(cuid())
  date DateTime
  book  String
  chapter Int
  fromVerse Int
  toVerse Int
  scripture String
  observation String
  application String
  prayer String
  imageUrl String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
